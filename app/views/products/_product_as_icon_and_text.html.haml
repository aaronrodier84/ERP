.product-with-icon
  .image
    -if current_user.admin
      = link_to image_tag(product.small_image_url), product_path(product.id)
    -else
      = image_tag(product.small_image_url)
  .info
    %p= product.internal_title
    %p.gray= "FNSKU: #{product.fnsku}"
    %p.gray= "Seller SKU: #{product.seller_sku}"
