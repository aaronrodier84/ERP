.container
	.row
		.col-md-4.col-md-offset-4
			.login-panel.panel.panel-default
				.panel-heading
					%h3.panel-title Change your password
				.panel-body
					= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
						= f.hidden_field :reset_password_token
						%fieldset
							.form-group
								= f.password_field :password, autofocus: true, autocomplete: "off", help: 'Minimum 8 characters'
							.form-group
								= f.password_field :password_confirmation, autocomplete: "off"
							.actions
								= f.submit "Change my password", class: 'btn btn-lg btn-success btn-block'
