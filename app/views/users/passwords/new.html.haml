
.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Forgot your password?
        .panel-body
          = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), label_errors: true, html: { method: :post }) do |f|
            %fieldset
              .form-group
                = f.email_field :email, autofocus: true, class: 'form-control'
                %br/
              .actions
                = f.submit "Send me reset password instructions", class: 'btn btn-lg btn-success btn-block'
              %br/
            = render "users/shared/links"
