= page_header do
  %i.fa.fa-users.fa-fw
  Active Users 
  = link_to 'New user', new_admin_user_path, class: 'btn btn-sm btn-primary pull-right'

.row
  .col-lg-12
    = index_table 'users-index' do
      %thead
        %tr
          %th
          %th
            Name
          %th
            Email
          %th
            Zones

      %tbody
        = render partial: "user", collection: active_users

= page_header do
  %i.fa.fa-user-secret.fa-fw
  Inactive Users 

.row
  .col-lg-12
    = index_table do
      %thead
        %tr
          %th
          %th
            Name
          %th
            Email
          %th
