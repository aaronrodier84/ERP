= page_header do
  %i.fa.fa-key
  Edit Amazon API Credentials

.row
  .col-lg-5.col-md-6.col-sm-8
    = bootstrap_form_for @setting, url: admin_settings_path, label_errors: true do |f|
      .control-group
        =f.text_field :aws_access_key_id, label: "AWS access key ID"
      .control-group
        =f.password_field :aws_secret_key, label: "AWS secret key", value: @setting.aws_secret_key
      .control-group
        =f.text_field :mws_merchant_id, label: "Seller (Merchant) ID"
      .control-group
        =f.text_field :mws_marketplace_id, label: "Marketplace ID"

      .form-actions
        = f.submit 'Save', class: 'btn btn-primary pull-right save'
        = link_to 'Cancel', admin_dashboard_index_path, class: 'btn btn-default pull-right'

